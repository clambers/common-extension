AT_BANNER([Library testing.])

AT_SETUP([Version])
AT_TEST([get-version], AT_TEST_MAIN([
  char *version = NULL;
  version = common_getVersion();
  if (!version) return EXIT_FAILURE;
  return EXIT_SUCCESS;
]))
AT_CLEANUP

AT_SETUP([Path (null)])
AT_TEST([path-null], AT_TEST_MAIN([
  char *path = NULL;
  path = common_getPath(NULL);
  if (!path) return EXIT_FAILURE;
  if (strcmp(path, "file://" COMMONDIR "/") != 0) return EXIT_FAILURE;
  return EXIT_SUCCESS;
]))
AT_CLEANUP

AT_SETUP([Path (empty string)])
AT_TEST([path-empty], AT_TEST_MAIN([
  char *path = NULL;
  path = common_getPath("");
  if (!path) return EXIT_FAILURE;
  if (strcmp(path, "file://" COMMONDIR "/") != 0) return EXIT_FAILURE;
  return EXIT_SUCCESS;
]))
AT_CLEANUP
